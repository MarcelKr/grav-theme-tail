{% extends 'partials/base.html.twig' %}

{% block content %}
    <article class="max-w-xl mx-auto">
        <header class="text-center mb-6 sm:mb-12">
            <h1 class="text-2xl sm:text-4xl font-bold">{{ page.title }}</h1>
            {% if page.header.headline %}
                <h2 class="text-lg sm:text-xl font-light mb-2 sm:mb-3">{{ page.header.headline }}</h2>
            {% endif %}
            <h3 class="text-gray-600 font-light">{{ page.header.date|date('d. M Y') }}</h3>
        </header>
        <section>
            {{ page.content }}
        </section>
    </article>

    <nav class="p-6 max-w-xl mx-auto flex flex-column flex-wrap">
        {% if not page.isFirst %}
            <div class="w-full md:w-1/2">
                <a href="{{ page.nextSibling.url }}">⮜ {{ page.nextSibling.title }}</a>
            </div>
        {% endif %}
        {% if not page.isLast %}
            <div class="w-full md:w-1/2 text-right">
                <a href="{{ page.prevSibling.url }}">{{ page.prevSibling.title }} ⮞</a>
            </div>
        {% endif %}
    </nav>
{% endblock %}
